@import nib

arrival-color-1-normal = "b2344b"
arrival-color-1-fusia = "d364bd"
arrival-color-1-purple = "a526c9"
arrival-color-2-normal = "6d6d6e"
arrival-color-2-blue = "3e57a2"
arrival-color-2-brown = "6b3828"
arrival-color-3-normal = "847153"
arrival-color-3-black = "black"
arrival-color-3-gray = "909090"
arrival-color-4-normal = "bd3a40"
arrival-color-4-black = "515151"
arrival-color-4-blue = "3e81aa"
arrival-color-4-green = "3dad3d"

naranja = rgb(255, 89, 18)

/*
	General Classes to the Complete Site.
==============================================================*/

::selection
    background #b3d4fc
    text-shadow none

body
	background-color rgb(244, 246, 248)
	color rgb(52, 64, 75)

	//Style to all Subtitle ind the Site.
	h2
		// color rgb(52, 64, 75)
		font-weight 900
		text-align center
		text-transform uppercase
		span
			color naranja

.container
	max-width 90%

/*	End of General Classes
--------------------------------*/


/*
	Home Template Classes 
==============================================================*/

#main
	height 830px
	position relative
	#navigation
		background white
		height 180px
		
		#nav-info
			align-items center
			display flex
			height 60px

			ul
				color rgb(52, 64, 75)
				width 100%

				li
					cursor pointer
					font-size 0.8em
					font-weight bold

					.contact-icons
						bottom -4px
						color naranja
						font-size 1.3em
						position relative				
					img
						position relative
						top -1px

				.social-icons
					bottom -3px
					font-size 1.2em
					position relative
					span
						margin 0 0.2em
						position relative
						&:hover
							// display none
							&::before
								color rgba(naranja, .9)
								font-size 1.3em
								position relative

						&::before
							transition all ease 0.4s

		#main-menu
			align-items center
			display flex
			height 120px

			.row
				width 100%
				
			.main-menu-logo
				position relative 
				top -8px
			.menu
				font-size 0.9em
				font-weight 500

				ul
					li
						cursor pointer
						margin-right 1em
					.active
						color naranja

			.main-menu-options
				padding-right 0

				ul
					li
						cursor pointer
						font-size 1.3em
						margin-left 0.7em
						position relative
						transition all ease 0.6s

						.cart
							background rgb(52, 64, 75)
							background-clip boerder-box
							border-radius 50%
							color white
							font-size 0.6em
							height 17px
							left 9px
							padding 0.1em
							position absolute
							text-align center
							top -13px
							width 17px

					.rotate-search
						transform rotate(-85deg)

	#home
		align-items center
		color rgb(60, 71, 81)
		height 650px
		display flex
		position relative

		.home-bg
			height 100%
			position absolute
			width 100%

		#promos
			align-items center
			display flex
			height 200px
			overflow-x auto

			.promos-controls

				.control
					cursor pointer
					display block
					background white
					height 17px
					margin-bottom 0.8em
					transition 0.4s all ease-in
					width 10px

					&:hover
						background rgba(naranja, 1)
						box-shadow -2px -2px 5px rgba(0, 0, 0, .4)

				.promo-selected
					background naranja
					height 36px
					box-shadow -2px -2px 5px rgba(0, 0, 0, .4)

			.promo
				height 100%
				margin 0
				padding-right 0
				position relative

				&-title
					h1
						color naranja
						font-size 3em
						font-weight 900
						margin 0 0 0.4em 0
						text-transform uppercase

				&-content
					&-pack
						p
							font-size 1.2em
							font-weight bold

					&-description
						p
							color rgb(73, 86, 98)
							font-size 1.1em

				&-foot
					align-items center
					bottom 0
					display flex
					position absolute

					&-price
						margin-right 2em
						p
							font-weight 700
							font-size 1.2em
							margin 0

					&-order
						color naranja
						p
							font-size 1.2em
							margin 0
							span
								position relative
								top -3px

#new-arrivals-section
	height 650px
	position relative
	// overflow hidden

	.container
		// overflow-x auto

		#new-arrivals
			text-align center
			position relative

			&-title
				// display none
				h2
					margin 1.2em 0 0.7em 0
					span
						//

			&-description
				margin-bottom 2em
				// p

			&-content
				align-items center
				display flex
				overflow-y auto
				padding 0.7em

				.new-arrival
					background white
					height 365px
					margin-left 1em
					min-height 365px
					min-width 270px
					width 270px
					
					&:first-child
						margin 0

					&-img
						padding-top 2em
						margin-bottom 1.5em

					&-name
						h4
							font-weight 700
							margin 1em 0

					&-price
						h4
							color naranja
							font-weight 700
							margin 1.5em 0

			&-paging
				align-items center
				display flex
				height 100px

				.paging-controls
					align-items center
					display flex
					background white
					height 50px
					justify-content center

					span
						background naranja
						border-radius 50%
						cursor pointer
						height 8px
						margin 0 0.2em
						width 8px

#best-sales
	// height 650px
	.container
		padding-top 1.5em
		background-clip content-box

		#best-sales-offers
			.best-sales-offer
				background white
				background-clip content-box
				height 100px
				margin-bottom 2em

				&-discount
					align-items center
					display flex
					height 100px
					justify-content center
					position relative

					.sale-bg
						background naranja
						height 60px
						right 40px
						position absolute
						transform rotate(45deg)
						width 50px

						&::after
							content ''
							background rgba(naranja, 0.5)
							display block
							height 52px
							right 5px
							position relative
							top 4px
							width 60px

					.discount
						text-align center

						p
							color white
							font-size 0.8em
							font-style italic
							right 46px
							margin 0
							position absolute
							top 25px

							span
								font-size 1.6em
								font-style normal
								font-weight 700
								margin 0

				&-content
					padding-right 0

					.offer-description
						padding-right 0
						h3
							font-size 1.3em
							font-weight 900
							letter-spacing -1px
							text-transform uppercase
						p
							font-size 0.9em
							font-weight 600
							letter-spacing -1px

					.offer-price
						height 100px
						padding 0
						h3
							color naranja
							font-size 2em
							font-weight 800
							margin 23% 0
							span
								cursor pointer
								font-weight 900
								font-size 0.8em

				.adv-area-title
					text-align center
					p
						font-size 1.1em
						font-weight 700
						margin 1.3em 0 0.5em 0
						span
							color naranja

				.adv-area-size
					color gray
					letter-spacing 8px
					text-align center

		#best-sales-body
			margin-top 2em
			margin-bottom 2.5em
	
			.best-sales-title
				margin 1em 0 1.5em 0

			.best-sales-description
				margin-bottom 3em
				text-align center

			.best-sales-content
				display flex
				height 195px
				justify-content space-between
				overflow-x auto

				.best-sale
					background white
					background-clip content-box
					height 160px
					min-width 160px
					min-width 370px
					position relative
					width 370px

					&-img
						position absolute
						top 40px
						left 25px

					&-name
						position absolute
						right 45px
						top 30px
						h3
							font-size 1.3em

					&-votes
						background-color white
						background url('../imgs/icons/rate.png'), url('../imgs/icons/rate.png'), url('../imgs/icons/rate.png'), url('../imgs/icons/rate.png'), url('../imgs/icons/rate.png')
						background-size content, content, content, content, content
						background-size 14px 12px
						border 1px dashed rgba(naranja, .5)
						position absolute
						height 14px
						right 145px
						top 95px
						width 72px

					&-price
						color naranja
						position absolute
						right 45px
						top 82px
						h4
							font-weight 700

		#join-section
			align-items center
			background white
			margin-bottom 3em
			min-height 123px
			padding 5% 0 4% 6%

			div
				margin-bottom 1em
				padding 0

				div
					h5
						color naranja
						font-size 1.2em
						font-weight 800
						margin 0
						text-transform uppercase
						white-space nowrap

					p
						color rgb(52, 64, 75)
						font-size 0.95em
						font-style italic
						font-weight 700
						letter-spacing -1px
						margin 0

					.join-input
						span
							color naranja
							font-size 1.5em
							margin-right 0.5em
							
						input
							border none
							border-radius 5px
							border-top 1px solid rgba(naranja, 0.3)
							border-bottom 1px solid rgba(naranja, 0.3)
							height 25px
							margin 0
							padding 0 0.5em
							position relative
							top -6px
							transition 0.5s height ease
							width 70%

							&:focus
								border-bottom 3px solid rgba(naranja, 0.5)
								border-top 2px solid rgba(naranja, 0.3)
								box-shadow 0 0 3px 2px rgba(naranja, .1)
								height 35px
								outline 3px rgba(orange, .4)

							&::placeholder
								color rgba(gray, .5)

					.join-button
						.join
							background-color naranja
							border-radius 0
							color white
							outline none
							padding 1em 1.5em
							position relative
							top -14px

#page-footer
	height 250px
	overflow hidden
	.container
		.row
			.foot-logo
			.foot-info
			.foot-payment
				// 
					














/*	End of Home Template Classes
--------------------------------*/




